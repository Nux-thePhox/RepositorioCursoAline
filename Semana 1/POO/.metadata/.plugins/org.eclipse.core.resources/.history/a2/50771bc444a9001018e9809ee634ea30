package com.mx.opening;

import java.util.InputMismatchException;
import java.util.Scanner;

public class ScannerOpeningAttr {
	
	private Scanner lectura = new Scanner(System.in);
	private Opening opening;
	
	private final String NO_ES_ENTERO = "Ingresa un valor entero";
	
	public ScannerOpeningAttr(Opening opening) {
		this.opening = opening;
	}

	private void leeNombre() {
		String nombre;
		nombre = lectura.nextLine();
		opening.setNombre(nombre);
	}
	
	private void leeAnime() {
		String anime;
		anime = lectura.nextLine();
		opening.setAnime(anime);
	}
	private String ;
	private String autor;
	private int numeroOpening;
	private int minutosDuracion;
	private int segundosDuracion;
	
}
