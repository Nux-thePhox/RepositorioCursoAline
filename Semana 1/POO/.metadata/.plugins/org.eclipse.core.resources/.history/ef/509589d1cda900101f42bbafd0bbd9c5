package com.mx.traductor;

import java.util.Scanner;

public class TraductorMain {
	
	private static TraductorPalabrasImpl traductorIngEsp = new TraductorPalabrasImpl();
	
	private static Scanner leer = new Scanner(System.in);
	
	private static String palabraIng, palabraEsp;
	
	public static void main(String[] args) {
		
		inicializaDiccionario();
		traductorIngEsp.muestraTodosLosRegistros();
		
		leerPalabrasIngEsp();
		traductorIngEsp.agregar(palabraIng, palabraEsp);
		
		
	}
	
	private static void leerPalabrasIngEsp() {
		System.out.print("Ingresa la palabra en ingles: ");
		palabraIng = leer.nextLine();
		System.out.print("Ingresa su traduccion al español: ");
		palabraEsp = leer.nextLine();
	}
	
	private static void inicializaDiccionario() {
		traductorIngEsp.agregar("Perro", "Dog");
		traductorIngEsp.agregar("Cat", "Gato");
		traductorIngEsp.agregar("Fish", "Pez");
	}
	
	private static void traducePalabra() {
		System.out.print("Ingrese palabrá en inglés: ");
		palabraIng = leer.nextLine();
		palabraEsp = traductorIngEsp.buscarPorPalabraClave(palabraIng);
		if(palabraEsp == null) {
			
		}
	}
}
