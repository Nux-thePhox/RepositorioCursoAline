package com.mx.opening;

import java.util.InputMismatchException;
import java.util.List;
import java.util.Scanner;

public class PrincipalOpening2 {
	
	private static List<String> listaMenuPrincipal = List.of("CREAR", "ACTUALIZAR", "MOSTRAR",
			"ELIMINAR", "BUSCAR", "CONTAR");
	
	private static Scanner scanner = new Scanner(System.in);
	
	public static void main(String[] args) {
		int opcionMenuP;
		MenuHelper menuPrincipal = new MenuHelper();
		menuPrincipal.modificaUltimaOpcion("SALIR");
		do {
			menuPrincipal.muestraMenu("MENU OPENINGS");
			try {
				opcionMenuP = scanner.nextInt();
				scanner.nextLine();
			}catch(InputMismatchException e){
				System.err.println(e+" Ingresa un tipo de dato entero!!");
				scanner.nextLine();
				opcionMenuP = -1;
			}
			//ejecuta bloque switch
		}while(opcionMenuP != menuPrincipal.getIndiceUltimaOpcion());
	}
	
	

}
