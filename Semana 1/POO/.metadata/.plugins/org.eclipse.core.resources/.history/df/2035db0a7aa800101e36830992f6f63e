package com.mx.computadora;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Principal2 {
	
	private static Scanner scanner = null;
	
	//Variables locales.
	private static String marca, modelo, capacidad;
	
	//Las variables menus nos ayudaran a almacenar opciones
	private static int menuPrincipal = 0;
	private static int menuSecundario = 0;
	//Simulara el indice de un objeto
	private static int indice = 0;
	
	private static double precio;
	private static int ram;
	
	private static List<Computadora> listaComputadora = new ArrayList<Computadora>();
	
	public static void main(String[] args) {
		
		//inicio del menu interactivo
		do {
			imprimeMenuPrincipal();
			scanner = new Scanner(System.in);
			menuPrincipal = scanner.nextInt();
			bloqueSwitchMenuPrincipal(menuPrincipal);
		}while(menuPrincipal != 7);
		System.out.println("Adios!");
	}
	
	private static void imprimeMenuPrincipal() {
		System.out.println("----- MENU -----\n"
				+ "1.- AGREGAR\n"
				+ "2.- MOSTRAR\n"
				+ "3.- EDITAR\n"
				+ "4.- BUSCAR\n"
				+ "5.- ELIMINAR\n"
				+ "6.- CONTAR\n"
				+ "7.- SALIR");
		System.out.print("*** Elige una opcion dentro del menu: ");
	}
	
	private static void imprimeMenuEditar() {
		System.out.println("----- MENU EDITAR -----\n"
				+ "1.- Editar marca\n"
				+ "2.- Editar modelo\n"
				+ "3.- Editar precio\n"
				+ "4.- Editar ram\n"
				+ "5.- Editar capacidad\n"
				+ "6.- SALIR");
		System.out.print("*** Elige el elemento a editar: ");
	}
	
	private static void bloqueSwitchMenuPrincipal(int menu) {
		//scanner = new Scanner(System.in);
		switch(menu) {
		case 1:
			System.out.println(menu+".- Agregando una nueva Computadora");
			leeMarca();
			leeModelo();
			leePrecio();
			leeRam();
			leeCapacidad();
			Computadora computadoraNueva = new Computadora(marca, modelo, precio, ram, capacidad);
			System.out.println(" Computadora creada: "+computadoraNueva);
			listaComputadora.add(computadoraNueva);
			break;
		case 2:
			System.out.println(menu+".- Mostrando lista de Computadoras");
			System.out.println(listaComputadora);
			break;
		case 3:
			System.out.println(menu+".- Editando una Computadora");
			System.out.print("Ingresa el indice de la computadora a editar: ");
			scanner = new Scanner(System.in);
			indice = scanner.nextInt();
			Computadora computadoraBuscada = listaComputadora.get(indice);
			do {
				imprimeMenuEditar();
				scanner = new Scanner(System.in);
				menuSecundario = scanner.nextInt();
				scanner.nextLine();
				bloqueSwitchMenuEditar(menuSecundario, computadoraBuscada);
			}while(menuSecundario != 6);
			break;
		case 4:
			System.out.println(menu+".- Buscando una Computadora");
			System.out.print("Ingresa el indice de la computadora a buscar: ");
			scanner = new Scanner(System.in);
			indice = scanner.nextInt();
			System.out.println(" Se encontro el elemento: "+listaComputadora.get(indice));
			break;
		case 5:
			System.out.println(menu+".- Eliminando una Computadora");
			System.out.print("Ingresa el indice de la computadora a eliminar: ");
			scanner = new Scanner(System.in);
			indice = scanner.nextInt();
			listaComputadora.remove(indice);
			System.out.println("Se ha eliminado el elemento en la lista!");
			break;
		case 6:
			System.out.println(menu+".- Contando los elementos de la lista");
			System.out.println("Existen "+listaComputadora.size()+" elementos de la lista");
			break;
		case 7:
			System.out.println("Saliendo del programa...");
			break;
		default:
			System.out.println("Opción invalida");
			break;
		}
	}
	
	private static void bloqueSwitchMenuEditar(int menuEditar, Computadora computadoraBuscada) {
		switch(menuEditar) {
		case 1:
			System.out.println(menuEditar+".- Editando marca");
			leeMarca();
			computadoraBuscada.setMarca(marca);
			System.out.println("Cambios aplicados!!");
			break;
		case 2:
			System.out.println(menuEditar+".- Editando modelo");
			leeModelo();
			computadoraBuscada.setModelo(modelo);
			break;
		case 3:
			System.out.println(menuEditar+".- Editando precio");
			leePrecio();
			computadoraBuscada.setPrecio(precio);
			break;
		case 4:
			System.out.println(menuEditar+".- Editando ram");
			leeRam();
			computadoraBuscada.setPrecio(precio);
			break;
		case 5:
			System.out.println(menuEditar+".- Editando capacidad");
			leeCapacidad();
			computadoraBuscada.setCapacidad(capacidad);
			break;
		case 6:
			System.out.println("Volviendo al menu principal...");
			break;
		default:
			System.out.println("Opción invalida");
			break;
		}
	}
	
	private static void leeMarca() {
		System.out.print(" Escribe la marca de la computadora: ");
		scanner = new Scanner(System.in);
		marca = scanner.nextLine();
	}

	private static void leeModelo() {
		System.out.print(" Escribe el modelo de la computadora: ");
		scanner = new Scanner(System.in);
		modelo = scanner.nextLine();
	}
	
	private static void leePrecio() {
		System.out.print(" Escribe el precio de la computadora: ");
		scanner = new Scanner(System.in);
		precio = scanner.nextDouble();
		scanner.nextLine();
	}
	
	private static void leeRam() {
		System.out.print(" Escribe la ram de la computadora: ");
		scanner = new Scanner(System.in);
		ram = scanner.nextInt(); 
		scanner.nextLine();
	}
	
	private static void leeCapacidad() {
		System.out.print(" Escribe la capacidad de la computadora: ");
		scanner = new Scanner(System.in);
		capacidad = scanner.nextLine();
	}
}
