package com.mx.opening;

import java.util.ArrayList;
import java.util.List;

public class MenuHelper {
	private List<String> opcionesMenu = new ArrayList<String>();
	private String ultimaOpcion = "Salir";
	private int indiceUltimaOpcion;
	
	public MenuHelper() {
		opcionesMenu.add(ultimaOpcion);
		indiceUltimaOpcion = getIndiceUltimaOpcion();	
	}
	
	public MenuHelper(String ultimaOpcion) {
		this.ultimaOpcion = ultimaOpcion;
		indiceUltimaOpcion = getIndiceUltimaOpcion();	

	}
	
	private int getIndiceUltimaOpcion() {
		return opcionesMenu.size() - 1;
	}

}
